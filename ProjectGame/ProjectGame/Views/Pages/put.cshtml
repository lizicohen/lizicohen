
@{
    ViewBag.Title = "put";
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/update.js"></script>
<h2>put</h2>
<h5> enter id for update</h5>
<input type="text" id="txtId" class="ml-3" />
